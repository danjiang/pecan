---
name: walk_iphone
header: light
app: 1211063732
---

<section id="walk_iphone_banner">
  <div class="walk_iphone">
		<img alt="<%= I18n.t("walk_iphone.icon.alt") %>" src="/images/icon-walk-iphone.png">
    <h1><%= I18n.t("walk_iphone.name") %></h1>
    <h2><%= I18n.t("walk_iphone.device") %></h2>
  </div>
</section>
<section id="product_screenshot">
	<img alt="<%= I18n.t("walk_iphone.screenshot.alt") %>" src="/images/<%= I18n.t("walk_iphone.screenshot.src") %>">
</section>
<section id="walk_iphone_feature">
  <div class="wrapper">
		<% { home: "fa-heart", food: "fa-cutlery", walks: "fa-calendar-check-o" }.each do |feature, icon| %>
			<div class="item">
        <div class="icon">
          <i class="fa <%= icon %>"></i>
        </div>
        <div class="text">
          <h3><%= I18n.t("walk_iphone.feature.#{ feature.to_s }.title") %></h3>
				  <p><%= I18n.t("walk_iphone.feature.#{ feature.to_s }.detail") %></p>
        </div>
        <div class="clearfix"></div>
			</div>
		<% end %>
  </div>
</section>
<section id="walk_iphone_buy">
	<a href="<%= I18n.t("walk_iphone.campaign") %>" title="<%= I18n.t("walk_iphone.buy") %>"><%= I18n.t("walk_iphone.download") %></a>
</section>
